<div class="container-scroller">
<%= render 'shared/header' %>
<div class="container-fluid page-body-wrapper">
  <%= render 'shared/sidebar' %>
 <div class="main-panel">
   <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
     <div class="card-body">
      <%= render "shared/notice" %>
     <br>
    <h4 class="card-title">Follow Requests</h4>
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
          <th>User</th>
          <th>Name</th>
          <th>Email</th>
          <th>Time</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @followers.each do |follower| %>
          <tr>
          <td class="py-1"><img src='<%= follower.avatar %>'' onError="this.onerror=null;this.src='/assets/avatar.png';" alt="image" class="user_list_img"></td>
          <td><%= get_full_name(follower) %></td>
          <td><%= follower.email %></td>
          <td><%= time_ago_in_words(follower.created_at) %></td>
          <% if !follower.roles.first.blank? %>
          <td><%= follower.roles.first.name %></td>
          <% else %>
          <td>No role assigned</td>
          <% end %>
           <td>
           <a href="#"><buttn class="btn btn-primary btn-sm">Send Message</button></a>
          
          </td>
      </tr>
        <% end %>
        </tbody>
    </table>
    </div>
</div>
</div>
</div>
  <%=  render 'shared/footer' %>
 </div><!--main panel-->
</div><!-- page wrapper-->
</div><!--container-->