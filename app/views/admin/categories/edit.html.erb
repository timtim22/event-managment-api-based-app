<div class="container-scroller">
<%= render 'shared/header' %>
<div class="container-fluid page-body-wrapper">
  <%= render 'shared/sidebar' %>
 <div class="main-panel" style="height:100%">
  <div class="col-12 grid-margin stretch-card">
    <div class="card">
    <div class="card-body">
        <h4 class="card-title">Edit Category</h4>
         <%= render "shared/form_errors", object: @category %>
         <%= render "shared/notice" %>
        <form method="post" action="<%= admin_category_path(@category) %>" class="forms-sample" enctype="multipart/form-data">
        <input type='hidden' name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="patch">
        <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= @category.name %>">
        </div>
        <div class="form-group">
          <label for="color_code">Color Code</label>
          <input type="text" class="form-control" id="color_code" name="color_code" value="<%= @category.color_code %>">
       </div>
       <div class="form-group">
        <label for="color_code">uuid</label>
        <input type="text" class="form-control" id="uuid" name="uuid" value="<%= @category.uuid %>">
       </div>
         <div class="form-group">
            <label for="image" class="control-label">Icon</label>
            <br>
            <input type="file" id="icon" name="icon">
        </div>
       
        <button type="submit" class="btn btn-primary mr-2 event_create_button">update</button>
        </form>
    </div>
    </div>
</div>
  <%=  render 'shared/footer' %>
 </div><!--main panel-->
</div><!-- page wrapper-->
</div><!--container-->


