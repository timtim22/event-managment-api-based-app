<div class="container-scroller">
<%= render 'shared/header' %>
<div class="container-fluid page-body-wrapper">
  <%= render 'shared/sidebar' %>
 <div class="main-panel" style="height:100%">
  <div class="col-12 grid-margin stretch-card">
    <div class="card">
    <div class="card-body">
        <h4 class="card-title">Update User</h4>
         <%= render "shared/form_errors", object: @user %>
         <%= render "shared/notice" %>
        <form method="post" action="<%= admin_user_path(@user.id) %>" class="forms-sample">
        <input type="hidden" name="_method" value="patch">
         <input type='hidden' name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
        <label for="first_name">Profile Name</label>
        <input type="text" class="form-control" id="profile_name" name="profile_name" placeholder="First Name" value="<%= get_full_name(@user) %>" disabled>
       
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="<%= @user.email %>" disabled>
        </div>
        <div class="form-group">
            <label for="email">Type</label>
            <select class="form-control" id="type" name="type">
            <option value="0" selected>Select Type</option>
            <% @roles.each do |role| %>
                <option value="<%= role.id %>" <%= @user.roles.first.id == role.id ? 'selected' : '' %> > <%= role.title %>
                </option>
            <% end %>
            </select>
        </div>
           <% if @user.roles.first.id == 2 %>
          
          <div class="business_details" style="display: none;">
                   <div class="form-group">
                    <label for="business_name">Business Name</label>
                    <input type="text" class="form-control" name="business_name" id="business_name" placeholder="Business Name" value="<%= @user.business_detail.name if @user.business_detail %>">
                </div>
                 <div class="form-group">
                   <label for="business_type">Business Type</label>
                    <input type="text" class="form-control" name="business_type" id="business_type" placeholder="Business Type" value="<%= @user.business_detail.type if @user.business_detail %>">
                </div>
                </div><!-- business detail-->
            <% end %>    
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        </form>
    </div>
    </div>
</div>
  <%=  render 'shared/footer' %>
 </div><!--main panel-->
</div><!-- page wrapper-->
</div><!--container-->


