<div class="container-scroller">
<%= render 'shared/header' %>
<div class="container-fluid page-body-wrapper">
  <%= render 'shared/sidebar' %>
 <div class="main-panel">
   <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
     <div class="card-body">
      <%= render "shared/notice" %>
     <br>
    <h4 class="card-title">Payments</h4>
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
          <th>Event</th>
          <th>Payer</th>
          <th>Payer Phone</th>
          <th>Amount</th>
          <th>Payemnt Date</th>
          <th>Event Date</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @payments.each do |payment| %>
        <tr>
          <td><%= link_to payment['event'].name, admin_events_path(payment['event'].id)[0...30] %></td>
          <td><%= full_name(payment['payer']) %></td>
          <td><%= payment['payer'].phone_number %></td>
          <td><%= payment['amount'] %> <i class="fas fa-euro-sign"></i></td>
          <td><%= local_time(payment['created_at']) %></td>
          <td><%= local_time(payment['event'].created_at) %></td>
          <td>
          <a href="<%= admin_transaction_path(payment['id']) %>" data-toggle="tooltip" title="View Detail"><i class="fa fa-eye"></i></a>
          |
          <%= link_to admin_transaction_path(payment['id']), method: :delete, data: { confirm: 'Are you sure you want to delete?'} do %>
            <i class="fa fa-trash" data-toggle="tooltip" title="Delete pass"></i>
            <% end %>
          </td>
       </tr>
        <% end %>
        </tbody>
    </table>
    </div>
</div>
<%=  render 'shared/footer' %>
</div>
</div>
  
 </div><!--main panel-->
</div><!-- page wrapper-->
</div><!--container-->