<div class="container-scroller">

<%= render 'shared/header' %>
<div class="container-fluid page-body-wrapper">
  <%= render 'shared/sidebar' %>
 <div class="main-panel">
   <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
     <div class="card-body">
     <%= render "shared/notice" %>
     <br>
    <h4 class="card-title">News feeds</h4>
    <div class="table-responsive">
    <table class="table table-striped dataTable stripe ui celled table" id="event_listing_table">
        <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Description </th>
          <th>date</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @news_feeds.each do |news_feed| %>
        <tr>
            <td><a href="<%= admin_news_feed_path(news_feed) %>" >
            <img src="<%= news_feed.image.url %>"  style="border-radius:3px;"></a></td>
            <td><%= news_feed.title[0...25] %></td>
            <td><%= news_feed.description[1...100] %> </td>
            <td><%= news_feed.created_at.to_date.to_s %></td>
            <td>
            <a href="<%= admin_news_feed_path(news_feed) %>" data-toggle="tooltip" title="View News Feed"><i class="fa fa-eye"></i></a>
            |
            <a href="<%= edit_admin_news_feed_path(news_feed) %>" data-toggle="tooltip" title="Edit News Feed"><i class="fa fa-edit"></i></a>
            |
            <%= link_to admin_news_feed_path(news_feed), method: :delete, data: {confirm: 'Are you sure you want to delete?'} do %>
              <i class="fa fa-trash" data-toggle="tooltip" title="Delete News Feed"></i>
              <% end %>
            </td>
        </tr>
        <% end %>
        
        </tbody>
    </table>
    <p style="margin:20px 0"><%= link_to_next_page @news_feeds, 'Next Page',class: 'pagination_btn' %> &nbsp; <%= link_to_prev_page @news_feeds, 'Previous Page', class: 'pagination_btn' %>
  </p>
    </div>
</div>
<%=  render 'shared/footer' %>
</div>
</div>
  
 </div><!--main panel-->
</div><!-- page wrapper-->
</div><!--container-->