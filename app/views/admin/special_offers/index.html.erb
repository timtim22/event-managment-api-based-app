<div class="container-scroller">
<%= render 'shared/header' %>
<div class="container-fluid page-body-wrapper">
  <%= render 'shared/sidebar' %>
 <div class="main-panel">
   <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
     <div class="card-body">
      <%= render "shared/notice" %>
     <br>
    <h4 class="card-title">Special Offers</h4>
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
          <td>Image</td>
          <th>Title</th>
          <th>Descripiton</th>
          <th>Validity</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @special_offers.each do |offer| %>
        <tr>
          <td><a href="<%= admin_special_offer_path(offer) %>" ><img src="<%=  offer.image.url %>"  style="border-radius:3px;"></a></td>

          <td><%= link_to offer.title[0...30], admin_special_offer_path(offer.id)  %></td>
          <td><%= offer.description[0...39] %></td>
          <td><%= offer.validity %></td>
          <td>
          <a href="<%= admin_special_offer_path(offer.id) %>" data-toggle="tooltip" title="View Offer"><i class="fa fa-eye"></i></a>
          |
          <a href="<%= edit_admin_special_offer_path(offer.id) %>" data-toggle="tooltip" title="Edit Offer"><i class="fa fa-edit"></i></a>
          |
          <%= link_to admin_special_offer_path(offer), method: :delete, data: { confirm: 'Are you sure you want to delete?'} do %>
            <i class="fa fa-trash" data-toggle="tooltip" title="Delete offer"></i>
            <% end %>
          </td>
       </tr>
        <% end %>
        </tbody>
    </table>
    </div>
</div>
</div>
</div>
  <%=  render 'shared/footer' %>
 </div><!--main panel-->
</div><!-- page wrapper-->
</div><!--container-->